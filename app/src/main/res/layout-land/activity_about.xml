<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xang.laothing.Activity.AboutActivity">

    <include layout="@layout/toolbar"
        android:id="@+id/include7" />

  <android.support.v4.widget.NestedScrollView
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginLeft="8dp"
      app:layout_constraintLeft_toLeftOf="parent"
      android:layout_marginTop="8dp"
      app:layout_constraintTop_toBottomOf="@+id/include7"
      android:layout_marginRight="8dp"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_marginBottom="8dp">

      <android.support.constraint.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">
          <ImageView
              android:id="@+id/imageView4"
              android:layout_width="119dp"
              android:layout_height="107dp"
              app:srcCompat="@drawable/banner_about"
              android:layout_marginRight="8dp"
              app:layout_constraintRight_toRightOf="parent"
              android:layout_marginLeft="8dp"
              app:layout_constraintLeft_toLeftOf="parent"
              android:layout_marginTop="28dp" />

          <TextView
              android:id="@+id/textView21"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="8dp"
              android:layout_marginRight="8dp"
              android:layout_marginTop="0dp"
              android:text="@string/app_name"
              android:textSize="30sp"
              android:textStyle="bold"
              android:textAppearance="?android:attr/textAppearanceLarge"
              android:textColor="@android:color/background_dark"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/imageView4"
              app:layout_constraintHorizontal_bias="0.502" />

          <TextView
              android:id="@+id/textView22"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="8dp"
              android:layout_marginRight="8dp"
              android:layout_marginTop="8dp"
              android:text="ພັດທະນາໂດຍ"
              android:textSize="18sp"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/textView21" />

          <TextView
              android:id="@+id/textView23"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Laothing Team"
              android:layout_marginTop="8dp"
              app:layout_constraintTop_toBottomOf="@+id/textView22"
              android:layout_marginRight="8dp"
              app:layout_constraintRight_toRightOf="parent"
              android:layout_marginLeft="8dp"
              app:layout_constraintLeft_toLeftOf="parent" />

          <TextView
              android:id="@+id/textView24"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="8dp"
              android:layout_marginRight="8dp"
              android:layout_marginTop="8dp"
              android:text="ສະໜັບສະໜູນໂດຍ"
              android:textSize="18sp"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/textView23" />

          <TextView
              android:id="@+id/textView25"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="MounoyDev"
              android:layout_marginTop="8dp"
              app:layout_constraintTop_toBottomOf="@+id/textView24"
              android:layout_marginLeft="8dp"
              app:layout_constraintLeft_toLeftOf="parent"
              android:layout_marginRight="8dp"
              app:layout_constraintRight_toRightOf="parent" />

          <TextView
              android:id="@+id/textView26"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="8dp"
              android:layout_marginRight="8dp"
              android:layout_marginTop="9dp"
              android:text="ສະຖານທີ່ພັດທະນາ"
              android:textSize="18sp"
              app:layout_constraintHorizontal_bias="0.502"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/textView25" />
          <TextView
              android:id="@+id/textView27"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="National University of laos"
              android:layout_marginRight="8dp"
              app:layout_constraintRight_toRightOf="parent"
              android:layout_marginLeft="8dp"
              app:layout_constraintLeft_toLeftOf="parent"
              android:layout_marginTop="8dp"
              app:layout_constraintTop_toBottomOf="@+id/textView26" />

          <TextView
              android:id="@+id/textView28"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="8dp"
              android:layout_marginRight="8dp"
              android:autoLink="web"
              android:text="www.laothing.com"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintHorizontal_bias="0.502"
              android:layout_marginTop="8dp"
              app:layout_constraintTop_toBottomOf="@+id/textView30" />

          <TextView
              android:id="@+id/textView29"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Version 1.0"
              android:textStyle="bold"
              android:layout_marginTop="10dp"
              app:layout_constraintTop_toBottomOf="@+id/textView28"
              android:layout_marginLeft="8dp"
              app:layout_constraintLeft_toLeftOf="parent"
              android:layout_marginRight="8dp"
              app:layout_constraintRight_toRightOf="parent" />

          <TextView
              android:id="@+id/textView30"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="8dp"
              android:layout_marginRight="8dp"
              android:layout_marginTop="7dp"
              android:text="Faculty of Natural Science"
              android:textSize="12sp"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/textView27" />


      </android.support.constraint.ConstraintLayout>

  </android.support.v4.widget.NestedScrollView>


</android.support.constraint.ConstraintLayout>
